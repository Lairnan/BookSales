<Window x:Class="BookSales.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BookSales"
        xmlns:controls="clr-namespace:BookSales.Controls"
        mc:Ignorable="d"
        Title="Авторизация"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="../Images/LibraryIcon.png"
        MinHeight="450"
        Height="500" 
        MinWidth="600"
        Width="800">

    <Window.Background>
        <ImageBrush ImageSource="../Background/Auth.jpg"/>
    </Window.Background>
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:TopPanelControl Grid.Row="0"/>
        <Frame
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsTabStop="False"
            x:Name="AFrame"
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
