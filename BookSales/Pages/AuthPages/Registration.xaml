<Page x:Class="BookSales.Pages.AuthPages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookSales.Pages.AuthPages"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Введите фамилию: "/>
            <TextBlock Text="Введите имя: "/>
            <TextBlock Text="Введите отчество(если имеется): "/>
            <TextBlock Text="Введите дату рождения: "/>
            <TextBlock Text="Введите логин: "/>
            <TextBlock Text="Введите пароль: "/>
            <TextBlock Text="Добавьте ваше изображение: "/>
        </StackPanel>
        <StackPanel
            Grid.Row="0"
            Grid.Column="1">
            <TextBox x:Name="SurnameBox"/>
            <TextBox x:Name="NameBox"/>
            <TextBox x:Name="PatronymicBox"/>
            <DatePicker x:Name="DateOfBirthBox"/>
            <TextBox x:Name="LoginBox"/>
            <PasswordBox x:Name="PasswordBox"/>
            <Grid
                Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image 
                    x:Name="ImageBox"
                    Width="95"
                    MaxWidth="95"
                    Margin="0 0 5 0"
                    Height="75"
                    Stretch="Fill"
                    Visibility="Visible"/>
                <StackPanel
                    Grid.Column="1">
                    <Button
                        Content="Добавить"
                        Click="AddImageBtn_Click"/>
                    <Button
                        x:Name="BtnClear"
                        IsEnabled="False"
                        Content="Очистить"
                        Click="ClearImageBtn_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="5"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Button
                x:Name="RegBtn"
                Content="Зарегистрироваться" 
                Click="RegBtn_Click" Cursor="Hand"/>
            <Button
                Margin="5 0"
                Content="Войти" 
                Click="AuthBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
